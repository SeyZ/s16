\newcommand{\ruledsection}[1]{
  \noindent
  \parbox[t]{\textwidth}{
    \vskip1em
    \sffamily\Large\bfseries #1\vskip7pt
    \hrule
  }
}
\setsecheadstyle{\ruledsection}

